<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	
	<display-name>sims-oop-web-project</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>/resources/views/index.jsp</welcome-file>
	</welcome-file-list>

	<!-- # Dashboard page route path -->
	<servlet>
		<servlet-name>dashboard</servlet-name>
		<jsp-file>/resources/views/student-dashboard.jsp</jsp-file>
	</servlet>

	<!-- # Exam page route path -->
	<servlet>
		<servlet-name>exam</servlet-name>
		<jsp-file>/resources/views/exam.jsp</jsp-file>
	</servlet>
	<!-- <servlet-mapping> 
			<servlet-name>dashboard</servlet-name> 
			<url-pattern>/dashboard</url-pattern> 
		</servlet-mapping> -->

	<!-- ================================================ TEACHER ROUTES START ================================================ -->

	<!-- Main Dashboard -->
	<servlet>
		<servlet-name>teacher-dashboard</servlet-name>
		<jsp-file>/resources/views/teacher/index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>teacher-dashboard</servlet-name>
		<url-pattern>/teacher/dashboard</url-pattern>
	</servlet-mapping>

	<!-- ================================================ TEACHER ROUTES END ================================================ -->

	<!-- ================================================ ADMIN ROUTES START ================================================ -->
	
	<!-- Main Dashboard -->
	<servlet>
		<servlet-name>admin-dashboard</servlet-name>
		<jsp-file>/resources/views/admin/index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin-dashboard</servlet-name>
		<url-pattern>/admin/dashboard</url-pattern>
	</servlet-mapping>
 

	<!-- ================================================ ADMIN ROUTES END ================================================ -->
	
</web-app>