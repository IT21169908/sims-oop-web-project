<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>sims-oop-web-project</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>/resources/views/index.jsp</welcome-file>
  </welcome-file-list>

<!-- # LOGIN ROUTES -->
  <servlet>
      <servlet-name>login</servlet-name>
      <jsp-file>/resources/views/auth/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
      <servlet-name>login</servlet-name>
      <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
<!-- # LOGIN SERVLET -->
  <servlet>
      <servlet-name>login-submit</servlet-name>
      <servlet-class>com.sims.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>login-submit</servlet-name>
      <url-pattern>/login-submit</url-pattern>
  </servlet-mapping>
    
<!-- # LOGOUT SERVLET -->
  <servlet>
      <servlet-name>logout</servlet-name>
      <servlet-class>com.sims.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>logout</servlet-name>
      <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
<!-- # Dashboard page route path-->
   <servlet>
      <servlet-name>dashboard</servlet-name>
      <jsp-file>/resources/views/student-dashboard.jsp</jsp-file>
  </servlet>
  
  <!-- # Exam page route path-->
   <servlet>
      <servlet-name>exam</servlet-name>
      <jsp-file>/resources/views/exam.jsp</jsp-file>
  </servlet>
 <!-- <servlet-mapping>
      <servlet-name>dashboard</servlet-name>
      <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>-->
    
  <!-- TEACHER ROUTES  -->
  
  <!-- Main Dashboard -->
  <servlet>
      <servlet-name>teacher-dashboard</servlet-name>
      <jsp-file>/resources/views/teacher/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
      <servlet-name>teacher-dashboard</servlet-name>
      <url-pattern>/teacher/dashboard</url-pattern>
  </servlet-mapping>
   
  
</web-app>